            p.title <span class="red">Стоимость участия</span><br><span class="old-price">18 000 руб.</span><br>10 000 руб.
            p.subtitle Количество участников ограничено
            .content
                form(action="" method="post").form
                    .form-el
                        label Введите Ваше Имя
                        input(type="text" name="name" placeholder="Иванова Мария")
                    .form-el
                        label Введите Ваш Email
                        input(type="email" name="email" placeholder="ivanova@mail.ru")
                    .form-el
                        label Введите Ваш Телефон
                        input(type="text" name="phone" placeholder="+7(123) 456-78-90")
                    .form-btn
                        button.btn.orange ЗАПИСАТЬСЯ НА ТРЕНИНГ
